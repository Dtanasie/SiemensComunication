{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], // Adăugați și consola pentru logare în consolă
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Endava\\PLC\\log-.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760, // 10 MB per file
          "rollOnFileSizeLimit": true // Permite creare de noi fișiere la depășirea limitelor
        }
      },
      {
        "Name": "Console" // Adăugați acest lucru pentru a loga și în consolă
      }
    ]
  },
  "PLC": {
    "IpAddress": "192.168.0.1",
    "CpuType": "S71200",
    "Rack": 0,
    "Slot": 1,
    "Address": "DB1.DBD0",
    "MaxReconnectAttempts": 5
  },
  "Folders": {
    "SourceFolder": "C:\\Photos",
    "DestinationFolder": "C:\\Destinatie"
  }
}
